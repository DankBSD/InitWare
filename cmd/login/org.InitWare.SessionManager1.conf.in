<busconfig>

        <policy user="root">
                <allow own="@SESSIOND_DBUS_BUSNAME@"/>
                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"/>
                <allow receive_sender="@SESSIOND_DBUS_BUSNAME@"/>
        </policy>

        <policy context="default">
                <deny send_destination="@SESSIOND_DBUS_BUSNAME@"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="org.freedesktop.DBus.Introspectable"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="org.freedesktop.DBus.Peer"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="org.freedesktop.DBus.Properties"
                       send_member="Get"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="org.freedesktop.DBus.Properties"
                       send_member="GetAll"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="GetSession"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="GetSessionByPID"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="GetUser"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="GetSeat"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ListSessions"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ListUsers"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ListMachines"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ListSeats"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ListInhibitors"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="Inhibit"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="SetUserLinger"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ActivateSession"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="ActivateSessionOnSeat"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="PowerOff"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="Reboot"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="Suspend"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="Hibernate"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="HybridSleep"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="CanPowerOff"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="CanReboot"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="CanSuspend"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="CanHibernate"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="CanHybridSleep"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="AttachDevice"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Manager"
                       send_member="FlushDevices"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Seat"
                       send_member="ActivateSession"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="Activate"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="SetIdleHint"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="TakeControl"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="ReleaseControl"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="TakeDevice"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="ReleaseDevice"/>

                <allow send_destination="@SESSIOND_DBUS_BUSNAME@"
                       send_interface="@SESSIOND_DBUS_INTERFACE@.Session"
                       send_member="PauseDeviceComplete"/>

                <allow receive_sender="@SESSIOND_DBUS_BUSNAME@"/>
        </policy>

</busconfig>
